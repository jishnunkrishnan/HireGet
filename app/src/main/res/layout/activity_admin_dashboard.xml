<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adminDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminDashboardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvWorkersList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/titillium_web_semi_bold"
            android:text="Workers List"
            android:textColor="#000000"
            android:textSize="18sp" />
        <View
            android:id="@+id/view"
            android:layout_below="@+id/tvWorkersList"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="160dp"
            android:background="#708090" />

        <ListView
            android:id="@+id/listViewWorkers"
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <View
            android:id="@+id/view2"
            android:layout_below="@+id/listViewWorkers"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#708090" />

        <TextView
            android:id="@+id/tvUsersList"
            android:layout_below="@id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/titillium_web_semi_bold"
            android:text="Users List"
            android:textColor="#000000"
            android:textSize="18sp" />
        <View
            android:id="@+id/view3"
            android:layout_below="@+id/tvUsersList"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="160dp"
            android:background="#708090" />

        <ListView
            android:id="@+id/listViewUsers"
            android:layout_below="@+id/view3"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="150dp" />

        <View
            android:id="@+id/view4"
            android:layout_below="@+id/listViewUsers"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#708090" />

        <TextView
            android:id="@+id/tvOnGoingWorks"
            android:layout_below="@id/view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/titillium_web_semi_bold"
            android:text="On Going Works"
            android:textColor="#000000"
            android:textSize="18sp" />
        <View
            android:id="@+id/view5"
            android:layout_below="@+id/tvOnGoingWorks"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="160dp"
            android:background="#708090" />

        <ScrollView
            android:id="@+id/scrollableAdmin"
            android:layout_below="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/llOnGoingWorks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Work: Electrical"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvNameWorker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Name of Worker: Jane Doe"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvWorkerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Phone: 62585 35864"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvNameCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Name of Customer: John Doe"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvCustomerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Phone: 62585 35864"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvCustomerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Address: 221, Baker Street - 221221"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvCostWorker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Cost: 1200/ Day"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Date: 21/ Dec/ 2019"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvWorkerDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Duration: 1 Day"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/adminNavView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/admin_header"
        app:menu="@menu/nav_admin_drawer_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true" />
</androidx.drawerlayout.widget.DrawerLayout>