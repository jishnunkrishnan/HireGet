<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adminDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminIssuesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvWorkersList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/titillium_web_semi_bold"
            android:text="Issues from Workers"
            android:textColor="#000000"
            android:textSize="18sp" />
        <View
            android:id="@+id/view"
            android:layout_below="@+id/tvWorkersList"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="160dp"
            android:background="#708090" />

        <LinearLayout
            android:id="@+id/linearLayoutCustomerOrder1"
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWork1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Work: Carpentry"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvNameWorker1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Name of Worker: John Doe"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvWorkerPhone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Phone: 98745 65244"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvWorkerAddress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Address: 22, SM Street - 50933"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvNameCustomer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Name of Customer: Daniel John"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvCustomerPhone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Phone: 98745 87452"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvCustomerAddress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Address: 22, Baker Street - 50933"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvCostWorker1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Cost: 1000/ Day"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvDate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Date: 21/ Nov/ 2020"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvCustomerIssue1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Issue: Customer didn't paid"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#708090"
                android:text="Resolve" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_below="@+id/linearLayoutCustomerOrder1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#708090" />

        <TextView
            android:id="@+id/tvPastOrders"
            android:layout_below="@id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/titillium_web_semi_bold"
            android:text="Issues from Customers"
            android:textColor="#000000"
            android:textSize="18sp" />
        <View
            android:id="@+id/view3"
            android:layout_below="@+id/tvPastOrders"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="160dp"
            android:background="#708090" />

        <LinearLayout
            android:id="@+id/linearLayoutCustomerOrder"
            android:layout_below="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Work: Carpentry"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvNameWorker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Name of Worker: John Doe"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvWorkerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Phone: 98745 65244"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvWorkerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Address: 22, SM Street - 50933"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvNameCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Name of Customer: Daniel John"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvCustomerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Phone: 98745 87452"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvCustomerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Address: 22, Baker Street - 50933"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvCostWorker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Cost: 1000/ Day"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Date: 21/ Nov/ 2020"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvCustomerIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Issue: Rude Worker, Asked more payment"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#708090"
                android:text="Resolve" />
        </LinearLayout>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/adminNavView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/admin_header"
        app:menu="@menu/nav_admin_drawer_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true" />
</androidx.drawerlayout.widget.DrawerLayout>