<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CustomerOrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvWorkersList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/titillium_web_semi_bold"
            android:text="Name &amp; Details"
            android:textColor="#000000"
            android:textSize="18sp" />
        <View
            android:id="@+id/view"
            android:layout_below="@+id/tvWorkersList"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="160dp"
            android:background="#621055" />

        <TextView
            android:id="@+id/tvCartName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/titillium_web_semi_bold"
            android:text="Name: John Doe"
            android:textColor="#332F2F"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCartName"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/titillium_web_semi_bold"
            android:text="Phone: (+91) 97446 63445"
            android:textColor="#332F2F"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPhone"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/titillium_web_semi_bold"
            android:text="Address: Povalliyil (H), Ummalathoor, Kozhikode"
            android:textColor="#332F2F"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddress"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/titillium_web_semi_bold"
            android:text="Map Location: Ummalathor, Kozhikode, India"
            android:textColor="#332F2F"
            android:textSize="18sp" />

        <View
            android:id="@+id/view2"
            android:layout_below="@+id/tvLocation"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#621055" />

        <TextView
            android:id="@+id/tvPastOrders"
            android:layout_below="@id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/titillium_web_semi_bold"
            android:text="Cart "
            android:textColor="#000000"
            android:textSize="18sp" />
        <View
            android:id="@+id/view3"
            android:layout_below="@+id/tvPastOrders"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="160dp"
            android:background="#621055" />

        <LinearLayout
            android:id="@+id/linearLayoutCustomerOrder"
            android:layout_below="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Work: Carpentry"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvNameWorker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Name of Worker: John Doe"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvWorkerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Phone: 98745 65244"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvCostWorker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Cost: 1000/ Day"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Date: 21/ Nov/ 2020"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvWorkerDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Duration: 2 Days"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_below="@+id/linearLayoutCustomerOrder"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#621055" />

        <Button
            android:id="@+id/btnPlaceOrder"
            android:layout_below="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="Place Order"/>


    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_drawer_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true" />

</androidx.drawerlayout.widget.DrawerLayout>