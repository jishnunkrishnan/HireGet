<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/workerDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkerRequestsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvWorkersList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/titillium_web_semi_bold"
            android:text="On Going Requests"
            android:textColor="#000000"
            android:textSize="18sp" />
        <View
            android:id="@+id/view"
            android:layout_below="@+id/tvWorkersList"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="160dp"
            android:background="#2874A6" />

        <LinearLayout
            android:id="@+id/linearLayoutRequest"
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Work: Carpentry"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvNameWorker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Name of Customer: John Doe"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvWorkerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Phone: 98745 65244"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvWorkerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Address: 21, Baker Street - 683578"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvCostWorker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Cost: 1000/ Day"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Date: 21/ Nov/ 2020"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvWorkerDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Duration: 2 Days"
                android:textColor="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2874A6"
                    android:text="Accept"
                    android:textColorLink="#FFFFFF" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2874A6"
                    android:text="Decline" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_below="@+id/linearLayoutRequest"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#2874A6" />

        <LinearLayout
            android:id="@+id/linearLayoutRequest2"
            android:layout_below="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWork2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Work: Carpentry"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvNameWorker2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Name of Customer: Jane Doe"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvWorkerPhone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Phone: 98745 54213"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvWorkerAddress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Address: 21, Sm Street - 683578"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvCostWorker2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Cost: 1000/ Day"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Date: 21/ Jan/ 2021"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvWorkerDuration2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/titillium_web_regular"
                android:text="Duration: 5 Days"
                android:textColor="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2874A6"
                    android:text="Accept"
                    android:textColorLink="#FFFFFF" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2874A6"
                    android:text="Decline" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/workerNavView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/seeker_header"
        app:menu="@menu/nav_worker_drawer_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true" />
</androidx.drawerlayout.widget.DrawerLayout>